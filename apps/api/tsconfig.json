{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    // "types": ["./src/types/custom.d.ts", "./node_modules/@types"],
    "typeRoots": ["./@types", "./src/types", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "src/**/*"],
  "exclude": ["node_modules"]
}
